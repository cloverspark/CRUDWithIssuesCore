@model IEnumerable<Student>
@{
    ViewData["Title"] = "Student list";
}

<h1>Student list</h1>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Message"]
        <button type="button" class="close" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<br />
<a class="btn" asp-action="Create" asp-controller="Students">Add Student</a>
<br />

<div class="table">
    <table class="table">
        <thread>
            <tr class="table-primary">
                <th scope="col">@Html.DisplayNameFor(m => m.Name)</th>
                <th scope="col">@Html.DisplayNameFor(m => m.DateOfBirth)</th>
            </tr>
        </thread>
        <tbody>
            @foreach (Student p in Model)
            {
                <tr>
                    <td>@p.Name</td>
                    <td>@Html.DisplayFor(m => @p.DateOfBirth)</td>
                    <td>
                        <a class="btn btn-info" asp-route-id="@p.StudentId" asp-action="Edit">Edit</a>
                        <a class="btn btn-danger" asp-route-id="@p.StudentId" asp-action="Delete">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>